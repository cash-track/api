{
  "name": "cash-track/api",
  "type": "project",
  "description": "The core service to handle API requests from different clients",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/cash-track/api/issues",
    "source": "https://github.com/cash-track/api"
  },
  "authors": [
    {
      "name": "Volodymyr Komarov",
      "email": "vovikems@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "ext-pdo": "*",
    "spiral/framework": "^2.8",
    "spiral/jobs": "^2.0",
    "spiral/roadrunner": "^v1.9.2",
    "spiral/database": "v2.9.3",
    "spiral/migrations": "^2.2",
    "spiral/nyholm-bridge": "^1.1",
    "cycle/orm": "dev-change-database as 1.7.0",
    "cycle/proxy-factory": "^1.0",
    "cycle/annotated": "^2.0",
    "cycle/migrations": "^1.0",
    "ramsey/uuid": "^4.2",
    "voku/portable-utf8": "^5.4",
    "firebase/php-jwt": "^5.2",
    "kreait/firebase-php": "^5.0",
    "lcobucci/jwt": "4.1.5",
    "aws/aws-sdk-php": "^3.190",
    "swiftmailer/swiftmailer": "^6.2",
    "laminas/laminas-diactoros": "^2.6"
  },
  "replace": {
    "symfony/polyfill-php72": "1.99",
    "symfony/polyfill-iconv": "1.99",
    "symfony/polyfill-intl-grapheme": "1.99",
    "symfony/polyfill-intl-normalizer": "1.99",
    "symfony/polyfill-mbstring": "1.99"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5|^9.0",
    "squizlabs/php_codesniffer": "3.*",
    "vimeo/psalm": "^4.9"
  },
  "scripts": {
    "post-create-project-cmd": [
      "php -r \"copy('.env.sample', '.env');\"",
      "php app.php encrypt:key -m .env",
      "php app.php configure -vv",
      "spiral get-binary"
    ],
    "checks": [
      "./vendor/bin/phpunit",
      "./vendor/bin/phpcs -p -n --standard=PSR12 --colors --report=code ./app/src",
      "./vendor/bin/psalm --php-version=8.0 --show-info=true --no-cache"
    ],
    "phpunit": [
      "./vendor/bin/phpunit"
    ],
    "phpcs": [
      "./vendor/bin/phpcs -p -n --standard=PSR12 --colors --report=code ./app/src"
    ],
    "psalm": [
      "./vendor/bin/psalm --php-version=8.0 --show-info=true"
    ]
  },
  "autoload": {
    "files": [
      "app/helpers/str.php"
    ],
    "psr-4": {
      "App\\": "app/src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "publish-cmd": "php app.php publish",
    "branch-alias": {
      "dev-master": "1.4.x-dev"
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
